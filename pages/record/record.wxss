/* record.wxss */
.mood-textarea {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  line-height: 1.6;
}

.datetime-row {
  width: 100%;
  padding: 20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.datetime-label {
  font-size: 28rpx;
  color: #666;
  margin-right: 10rpx;
}

.btn-area {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  margin-top: 30rpx;
}

.btn-area button {
  width: 45%;
}

.activity-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  transition: all 0.3s ease;
}

.activity-item:active {
  opacity: 0.8;
}

.activity-item.active {
  border: 2rpx solid #58adf5;
  background-color: #f5f5f5;
  box-shadow: none;
  transform: none;
}

.activity-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
}

.activity-item text {
  font-size: 28rpx;
  color: #333;
}

@keyframes selectAnimation {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.1);
  }
  100% {
    transform: scale(1.05);
  }
} 