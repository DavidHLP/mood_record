/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  box-sizing: border-box;
}

page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'PingFang SC', 'Microsoft YaHei', Arial, sans-serif;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.card {
  width: 100%;
  background: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.btn-primary {
  background-color: #58adf5;
  color: #fff;
  border: none;
  border-radius: 10rpx;
}

.btn-default {
  background-color: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
  border-radius: 10rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.mood-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin: 20rpx 0;
}

.mood-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 10rpx;
  background-color: #f5f5f5;
}

.mood-item.active {
  border: 2rpx solid #58adf5;
}

.mood-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.mood-name {
  font-size: 26rpx;
  color: #666;
}

.activity-list {
  display: flex;
  flex-wrap: wrap;
  margin: 20rpx 0;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
}

.activity-item.active {
  background-color: #e6f3ff;
  color: #58adf5;
}

.activity-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.tag {
  padding: 4rpx 16rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  margin-right: 12rpx;
}

.datetime {
  font-size: 24rpx;
  color: #999;
}

.divider {
  height: 1px;
  background-color: #eee;
  width: 100%;
  margin: 20rpx 0;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 30rpx;
  color: #999;
}

.empty-icon {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: 20rpx;
}

.text-center {
  text-align: center;
}
